<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.prm.android.kirakira.Controller.RegisterActivity">

    <TextView
            android:text="Register"
            android:layout_width="172dp"
            android:gravity="center"
            android:id="@+id/textView2" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAlignment="center" android:textSize="36sp"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1" android:layout_height="80dp"/>
    <EditText
            android:id="@+id/edtRegUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:hint="Enter your username" android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.45"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:layout_constraintRight_creator="1" tools:layout_constraintLeft_creator="1"/>

    <EditText
            android:id="@+id/edtRegPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:ems="10"
            android:inputType="textPassword|textVisiblePassword"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:hint="Enter your password" android:textAlignment="center"
            tools:layout_constraintRight_creator="1" tools:layout_constraintLeft_creator="1"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/edtRegUsername"/>
    <EditText
            android:id="@+id/edtRegConfirmPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:ems="10"
            android:inputType="textPassword|textVisiblePassword"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:hint="Confirm your password" android:textAlignment="center"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edtRegPassword"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtRegFullname"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edtRegConfirmPassword"
            app:layout_constraintLeft_toLeftOf="parent" android:textAlignment="center" android:hint="Your full name"
            android:layout_marginLeft="32dp" android:layout_marginRight="32dp"/>
    <CheckBox
            android:text="Agree with"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbRegLicense"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/edtRegFullname"
            android:layout_marginEnd="16dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp" android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginLeft="16dp"
            app:layout_constraintHorizontal_bias="0.3" android:checked="false"
            android:textColor="@android:color/darker_gray"/>
    <TextView
            android:text=" License"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRegLicense"
            android:textStyle="normal|italic"
            android:textColor="@color/dialog_cancel_bgcolor"
            app:layout_constraintBaseline_toBaselineOf="@+id/cbRegLicense"
            app:layout_constraintLeft_toRightOf="@+id/cbRegLicense"/>
    <Button
            android:text="Register"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegister"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cbRegLicense"
            app:layout_constraintLeft_toLeftOf="parent" style="@android:style/Widget.Button.Inset"
            android:layout_width="145dp"/>
    <TextView
            android:text="Has an account?"
            android:layout_width="0dp"
            android:id="@+id/tvRegLogin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" android:textAlignment="center"
            android:textSize="18sp" android:layout_height="30dp" android:textStyle="normal|italic"/>
</android.support.constraint.ConstraintLayout>
